<div class="contents row">
  <div class="col s12 m6" >
          <div class="card blue-grey darken-1" >
            <div class="card-content white-text">
              <span class="card-title"><%= @blog.title %></span>
              <p><%= simple_format(@blog.text) %></p>
            </div>
    <div class="card-action">
      <% if user_signed_in? && current_user.id == @blog.user_id %>
              <a><%= link_to "お気に入り", add_blog_path(@blog), method: :post %></a>
              <a><%= link_to '削除',"/blogs/#{@blog.id}",method: :delete%></a>
              <a><%= link_to '編集', "/blogs/#{@blog.id}/edit", method: :get %></a>
      <% end %>
    </div>
          </div>
  </div>
</div>
