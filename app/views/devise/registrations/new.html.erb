<div class="content row" style="left: 0;">
<h2 style="margin:0 300px;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field" style="margin: 8px 300px">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true,maxlength:"20" %>
  </div>

  <div class="field" style="margin: 8px 300px">
    <%= f.label :email %><br />
    <%= f.email_field :email%>
  </div>

  <div class="field" style="margin: 8px 300px">
    <%= f.label :password %>
    <% if @validatable%>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field" style="margin: 8px 300px">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions" style="margin: 8px 300px">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
